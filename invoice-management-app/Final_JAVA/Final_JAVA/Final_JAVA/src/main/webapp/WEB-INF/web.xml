<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Final_JAVA</display-name>
  <welcome-file-list>
    <welcome-file>add.jsp</welcome-file>
    <welcome-file>delete.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.highradius.servlets.AddServlet</servlet-class>
    </servlet>
    
     <servlet>
        <servlet-name>Read</servlet-name>
        <servlet-class>com.highradius.servlets.Read</servlet-class>
    </servlet>
    
	<servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>com.highradius.servlets.Delete</servlet-class>
    </servlet>
    
	<servlet>
    <servlet-name>ReadApi</servlet-name>
    <servlet-class>com.highradius.servlets.ReadApi</servlet-class>
	</servlet>
	
	
	<servlet>
    <servlet-name>AddApi</servlet-name>
    <servlet-class>com.highradius.servlets.AddApi</servlet-class>
	</servlet>
	
	<servlet>
    <servlet-name>Update</servlet-name>
    <servlet-class>com.highradius.servlets.Update</servlet-class>
	</servlet>
	
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Read</servlet-name>
        <url-pattern>/read</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
    <servlet-name>ReadApi</servlet-name>
    <url-pattern>/api/read</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
    <servlet-name>AddApi</servlet-name>
    <url-pattern>/API/addInvoice</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
    <servlet-name>Update</servlet-name>
    <url-pattern>/update</url-pattern>
	</servlet-mapping>
</web-app>